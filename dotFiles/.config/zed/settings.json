// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "icon_theme": "Catppuccin Latte",
    "features": {
        "edit_prediction_provider": "zed"
    },
    "agent": {
        "enable_feedback": false,
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4-latest"
        }
    },
    "restore_on_startup": "last_session",
    "ui_font_size": 15,
    "buffer_font_size": 14.5,
    "buffer_line_height": "comfortable",
    "theme": {
        "mode": "system",
        "light": "Catppuccin Latte",
        "dark": "One Dark"
    },
    "tab_size": 4,
    "proxy": "socks5://localhost:7890",
    "autosave": "on_focus_change",
    "buffer_font_family": "IntoneMono Nerd Font Mono",
    "buffer_font_fallbacks": [
        "LXGW WenKai Mono",
        "Noto Sans Mono CJK SC",
        "IntoneMono Nerd Font Mono",
        "IntoneMono Nerd Font"
    ],
    "load_direnv": "shell_hook",
    "tabs": {
        "close_position": "right",
        "show_close_button": "hover",
        "activate_on_close": "history",
        "file_icons": true,
        "git_status": true,
        "show_diagnostics": "errors" // "off", "all"
    },
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true
            // "min_column": 120
        }
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.history",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings"
    ],
    "file_types": {
        // "C++": ["c"],
        // "TOML": ["MyLockFile"],
        "Dockerfile": ["Dockerfile*"]
    },
    // "lsp": {
    //   "yaml-language-server": {
    //     "settings": {
    //       "yaml": {
    //         "keyOrdering": true // Enforces alphabetical ordering of keys in maps
    //       }
    //     }
    //   }
    // },
    "format_on_save": "off",
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "journal": {
        "path": "/home/tioeare/Documents/TioeAre/daily",
        "hour_format": "hour24"
    },
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_file_finder": true,
        "enable_preview_from_code_navigation": true
    },
    "remove_trailing_whitespace_on_save": true,
    "show_whitespaces": "trailing", // "all"
    "whitespace_map": {
        "space": "â–ˆ"
    },
    "ensure_final_newline_on_save": true,
    "seed_search_query_from_cursor": "selection",
    "use_smartcase_search": true,
    "soft_wrap": "editor_width",
    "show_wrap_guides": true,
    "wrap_guides": [120],
    "preferred_line_length": 120,
    "terminal": {
        "toolbar": {
            "breadcrumbs": true
        },
        "button": true,
        "working_directory": "current_project_directory",
        "font_family": "IntoneMono Nerd Font Mono",
        "font_fallbacks": ["IntoneMono Nerd Font", "LXGW WenKai Mono", "Noto Sans Mono CJK SC"]
    },
    "close_on_file_delete": false,
    "auto_install_extensions": {
        "catppuccin": true,
        "catppuccin-icons": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "git-firefly": true,
        "html": true,
        "ini": true,
        "java": true,
        "latex": true,
        "lua": true,
        "make": true,
        "neocmake": true,
        "tmux": true,
        "toml": true,
        "xml": true,
        "python-snippets": true,
        "kdl": true
    }
}
